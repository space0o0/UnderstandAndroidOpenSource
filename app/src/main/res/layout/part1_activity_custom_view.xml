<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="customViewAct" type="com.space.understandandroidopensource.part1.view.CustomViewActivity"/>
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.space.understandandroidopensource.part1.view.CustomViewActivity">

        <com.space.understandandroidopensource.part1.view.CustomView
            android:id="@+id/myCustomView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="@{customViewAct::onClickCustomView}"/>
    </android.support.constraint.ConstraintLayout>
</layout>